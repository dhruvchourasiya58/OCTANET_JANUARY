function addTask() {
    var taskInput = document.getElementById("taskInput");
    var taskText = taskInput.value;

    if (taskText.trim() !== "") {
        var ul = document.getElementById("todoList");
        var li = document.createElement("li");
        li.appendChild(document.createTextNode(taskText));
        ul.appendChild(li);
        taskInput.value = "";
    }
}   
